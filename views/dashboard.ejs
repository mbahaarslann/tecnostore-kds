    <script>
    // 1. GENÄ°ÅžLETÄ°LMÄ°Åž RENK PALETÄ°
    const colorPalette = [
        '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', 
        '#858796', '#5a5c69', '#6610f2', '#fd7e14', '#20c997',
        '#FF6633', '#FFB399', '#FF33FF', '#FFFF99', '#00B3E6', 
        '#E6B333', '#3366E6', '#999966', '#99FF99', '#B34D4D'
    ];

    // 2. DATA PARSING
    function safeParse(dataStr) {
        try {
            if (!dataStr) return [];
            if (typeof dataStr === 'object') return dataStr; 
            return JSON.parse(dataStr); 
        } catch (e) {
            console.error("Veri okuma hatasÄ±:", e);
            return [];
        }
    }

    // VERÄ°LER
    const salesData = { labels: safeParse('<%- trendLabels %>'), data: safeParse('<%- trendData %>') };
    const catData = { labels: safeParse('<%- catLabels %>'), data: safeParse('<%- catData %>') };
    const profitData = { labels: safeParse('<%- profitLabels %>'), data: safeParse('<%- profitData %>') };
    const cityData = { labels: safeParse('<%- cityLabels %>'), data: safeParse('<%- cityData %>') };

    // THEME & COLOR MANAGEMENT
    function getCurrentTheme() { return document.documentElement.getAttribute('data-bs-theme') || 'light'; }
    function isDarkMode() { return getCurrentTheme() === 'dark'; }
    
    function toggleTheme() {
        const newTheme = getCurrentTheme() === 'dark' ? 'light' : 'dark';
        document.documentElement.setAttribute('data-bs-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeUI(newTheme);
        updateChartColors(newTheme);
    }
    
    function updateThemeUI(theme) {
        const themeIcon = document.getElementById('themeIcon');
        const themeText = document.getElementById('themeText');
        if (theme === 'dark') {
            if(themeIcon) themeIcon.className = 'fa-solid fa-moon';
            if(themeText) themeText.textContent = 'Koyu';
        } else {
            if(themeIcon) themeIcon.className = 'fa-solid fa-sun';
            if(themeText) themeText.textContent = 'AÃ§Ä±k';
        }
    }
    
    function getChartColors(theme) {
        return theme === 'dark' 
            ? { textColor: '#e2e8f0', gridColor: 'rgba(255,255,255,0.05)', legendColor: '#e2e8f0' }
            : { textColor: '#495057', gridColor: 'rgba(0,0,0,0.05)', legendColor: '#495057' };
    }
    
    function updateChartColors(theme) {
        const colors = getChartColors(theme);
        [salesChart, categoryChart, profitChart, cityChart].forEach(chart => {
            if (chart) {
                if (chart.options.scales) {
                    Object.keys(chart.options.scales).forEach(key => {
                        const scale = chart.options.scales[key];
                        if (scale.display !== false) {
                            if (scale.grid) scale.grid.color = colors.gridColor;
                            if (scale.ticks) scale.ticks.color = colors.textColor;
                        }
                    });
                }
                if (chart.options.plugins?.legend?.labels) {
                    chart.options.plugins.legend.labels.color = colors.legendColor;
                }
                chart.update('none'); 
            }
        });
    }
    
    document.addEventListener('DOMContentLoaded', () => { updateThemeUI(getCurrentTheme()); });

    // INSTANCES
    let salesChart, categoryChart, profitChart, cityChart;

    // TOOLTIP & LEGEND & SCALES
    const advancedTooltip = {
        enabled: true,
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        titleFont: { size: 14, weight: 'bold' },
        bodyFont: { size: 13 },
        padding: 12,
        cornerRadius: 8,
        displayColors: true,
        callbacks: {
            label: function(context) {
                let label = context.dataset.label || '';
                if (label) label += ': ';
                let value = context.parsed.y;
                // Yatay bar kontrolÃ¼
                if (context.chart.config.type === 'bar' && context.chart.options.indexAxis === 'y') {
                        value = context.parsed.x;
                } else if (value === undefined || value === null) {
                        value = context.parsed;
                }
                if(value !== null && value !== undefined) {
                    label += new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY', maximumFractionDigits: 0 }).format(value);
                }
                return label;
            }
        }
    };

    function getAdvancedLegend() {
        const colors = getChartColors(getCurrentTheme());
        return {
            display: true, position: 'top',
            labels: { usePointStyle: true, padding: 15, font: { size: 12, weight: '600' }, color: colors.legendColor }
        };
    }

    function getAdvancedScales() {
        const colors = getChartColors(getCurrentTheme());
        return {
            x: {
                grid: { display: true, color: colors.gridColor, drawBorder: false },
                ticks: { font: { size: 11, weight: '500' }, color: colors.textColor, padding: 10 }
            },
            y: {
                grid: { display: true, color: colors.gridColor, drawBorder: false },
                ticks: { 
                    font: { size: 11, weight: '500' }, color: colors.textColor, padding: 10,
                    callback: function(value) {
                        if (typeof value === 'number') {
                            if (value >= 1000000) return (value / 1000000).toFixed(1) + 'M â‚º';
                            else if (value >= 1000) return (value / 1000).toFixed(0) + 'K â‚º';
                            return value.toLocaleString('tr-TR') + ' â‚º';
                        }
                        return value; 
                    }
                }
            }
        };
    }

    function getCommonOpts() {
        return { 
            responsive: true, maintainAspectRatio: false,
            plugins: { legend: getAdvancedLegend(), tooltip: advancedTooltip },
            animation: { duration: 1000, easing: 'easeInOutQuart' }
        };
    }

    // ------------------------------------------
    // 1. SATIÅž
    // ------------------------------------------
    function initSales(type = 'line') {
        const ctx = document.getElementById('salesChart');
        if (salesChart) salesChart.destroy();
        let fill = (type === 'area');
        if(type === 'area') type = 'line';

        salesChart = new Chart(ctx, {
            type: type,
            data: {
                labels: salesData.labels,
                datasets: [{ 
                    label: 'Ciro (â‚º)', data: salesData.data, 
                    borderColor: '#4e73df', backgroundColor: type === 'bar' ? 'rgba(78, 115, 223, 0.8)' : 'rgba(78, 115, 223, 0.1)', 
                    fill: fill, tension: 0.4, borderWidth: 3, pointRadius: 4, pointBackgroundColor: '#4e73df'
                }]
            },
            options: { ...getCommonOpts(), scales: getAdvancedScales() }
        });
    }

    // ------------------------------------------
    // 2. KATEGORÄ°
    // ------------------------------------------
    function initCategory(type = 'doughnut') {
        const ctx = document.getElementById('categoryChart');
        if (categoryChart) categoryChart.destroy();
        const isBar = type === 'bar';
        const opts = getCommonOpts();
        opts.plugins.legend.display = !isBar;
        const scales = getAdvancedScales();
        if (!isBar) { scales.x.display = false; scales.y.display = false; }

        categoryChart = new Chart(ctx, {
            type: type,
            data: {
                labels: catData.labels,
                datasets: [{ 
                    label: 'Kategori SatÄ±ÅŸ', data: catData.data, 
                    backgroundColor: colorPalette, borderWidth: 2, borderColor: isDarkMode() ? '#2c2c2c' : '#fff'
                }]
            },
            options: { ...opts, scales: scales }
        });
    }

    // ------------------------------------------
    // 3. KÃ‚R
    // ------------------------------------------
    function initProfit(type = 'bar') {
        const ctx = document.getElementById('profitChart');
        if (profitChart) profitChart.destroy();
        const isPie = (type === 'pie' || type === 'doughnut');
        const scales = getAdvancedScales();
        if (isPie) { scales.x.display = false; scales.y.display = false; }
        const opts = getCommonOpts();
        opts.plugins.legend.display = isPie;

        profitChart = new Chart(ctx, {
            type: type,
            data: {
                labels: profitData.labels,
                datasets: [{ 
                    label: 'Net KÃ¢r (â‚º)', data: profitData.data, 
                    backgroundColor: isPie ? colorPalette : 'rgba(28, 200, 138, 0.8)',
                    borderColor: '#1cc88a', borderWidth: 2, fill: (type === 'area'), tension: 0.3
                }]
            },
            options: { ...opts, scales: scales }
        });
    }

    // ------------------------------------------
// ------------------------------------------
    // 4. ÅžEHÄ°R (DÃœZELTÄ°LDÄ°: Pasta Modunda Renkler ve Legend)
    // ------------------------------------------
    function initCity(type = 'horizontalBar') {
        const ctx = document.getElementById('cityChart');
        if (cityChart) cityChart.destroy();

        let indexAxis = 'x';
        let chartType = type;
        
        // Yatay bar ayarlamasÄ±
        if (type === 'horizontalBar') {
            chartType = 'bar';
            indexAxis = 'y'; // Åžehir isimleri solda
        }

        // Grafik Pasta mÄ± Ã‡ubuk mu kontrolÃ¼
        const isPie = (chartType === 'pie' || chartType === 'doughnut');

        const scales = getAdvancedScales();
        
        if (isPie) {
            // Pasta ise eksenleri ve Ã§izgileri tamamen kapat
            scales.x.display = false;
            scales.y.display = false;
        } else if (indexAxis === 'y') {
            // Yatay Bar ise Y ekseninde ÅŸehir isimlerini gÃ¶ster
            scales.y.ticks.callback = function(val) { return this.getLabelForValue(val); };
            scales.y.ticks.autoSkip = false;
            
            // X ekseninde para formatÄ±
            scales.x.ticks.callback = function(value) {
                if (value >= 1000000) return (value / 1000000).toFixed(1) + 'M â‚º';
                else if (value >= 1000) return (value / 1000).toFixed(0) + 'K â‚º';
                return value;
            };
        }

        // Legend AyarÄ± (Pasta ise AÃ§, Bar ise Kapat)
        const opts = getCommonOpts();
        opts.plugins.legend = isPie ? { display: true, position: 'bottom' } : { display: false };

        cityChart = new Chart(ctx, {
            type: chartType,
            data: {
                labels: cityData.labels, 
                datasets: [{ 
                    label: 'Toplam SatÄ±ÅŸ (â‚º)', 
                    data: cityData.data, 
                    // DÃœZELTME BURASI: Pasta ise renk paletini kullan, deÄŸilse tek renk
                    backgroundColor: isPie ? colorPalette : '#36b9cc', 
                    borderColor: isPie ? '#ffffff' : '#2c9faf',
                    borderWidth: 1, 
                    barPercentage: 0.7 
                }]
            },
            options: {
                ...opts,
                indexAxis: indexAxis,
                scales: scales
            }
        });
    }

    function updateChartType(chartName, newType) {
        if (chartName === 'sales') initSales(newType);
        else if (chartName === 'category') initCategory(newType);
        else if (chartName === 'profit') initProfit(newType);
        else if (chartName === 'city') initCity(newType);
    }

    document.addEventListener('DOMContentLoaded', () => {
        initSales('line');
        initCategory('doughnut');
        initProfit('bar');
        initCity('horizontalBar');
    });

    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const simId = urlParams.get('simId');
        if (simId) {
            const geoLink = document.querySelector('a[href="/cografi-analiz"]');
            if (geoLink) {
                geoLink.href = `/cografi-analiz?simId=${simId}`;
                geoLink.innerHTML += ' <span class="badge bg-warning text-dark ms-2" style="font-size:10px">SÄ°M</span>';
            }
        }
    });
</script>

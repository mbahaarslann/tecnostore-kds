    <script>
        // Bootstrap Tooltip'leri etkinle≈ütir
        document.addEventListener("DOMContentLoaded", function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function showFilter(type) {
            document.getElementById('allView').style.display = 'none';
            document.getElementById('tipView').style.display = 'none';
            document.getElementById('tarihView').style.display = 'none';

            document.querySelectorAll('.filter-tab').forEach(tab => tab.classList.remove('active'));

            if (type === 'all') {
                document.getElementById('allView').style.display = 'block';
                event.currentTarget.classList.add('active');
            } else if (type === 'tip') {
                document.getElementById('tipView').style.display = 'block';
                event.currentTarget.classList.add('active');
            } else if (type === 'tarih') {
                document.getElementById('tarihView').style.display = 'block';
                event.currentTarget.classList.add('active');
            }
        }

        async function deleteSimulation(simId, simName) {
            if (!confirm(`"${simName}" adlƒ± sim√ºlasyonu silmek istediƒüinizden emin misiniz?\n\nBu i≈ülem geri alƒ±namaz!`)) {
                return;
            }

            try {
                const response = await fetch(`/simulasyon/sil/${simId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert('‚úÖ Sim√ºlasyon ba≈üarƒ±yla silindi!');
                    window.location.reload();
                } else {
                    alert('‚ùå Hata: ' + result.message);
                }
            } catch (error) {
                console.error('Hata:', error);
                alert('‚ùå Bir hata olu≈ütu. L√ºtfen tekrar deneyin.');
            }
        }

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geli≈ümi≈ü Sim√ºlasyon | TecnoStore KDS</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { 
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            min-height: 100vh;
        }
        
        /* SIDEBAR */
        .sidebar { 
            height: 100vh; 
            width: 260px; 
            position: fixed; 
            top: 0; 
            left: 0; 
            background: linear-gradient(180deg, #1a1d29 0%, #2d3142 100%); 
            padding-top: 25px; 
            color: white; 
            z-index: 1000; 
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar a { 
            padding: 16px 25px; 
            text-decoration: none; 
            font-size: 15px; 
            color: #b8bcc8; 
            display: block; 
            border-left: 3px solid transparent; 
            transition: all 0.3s ease; 
            margin: 2px 10px;
            border-radius: 8px;
        }
        .sidebar a:hover { 
            background: rgba(255,255,255,0.1); 
            color: #fff; 
            transform: translateX(5px);
        }
        .sidebar a.active { 
            background: linear-gradient(135deg, #4e73df, #224abe); 
            color: #fff; 
            border-left-color: #fff;
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        }
        .sidebar .brand { 
            font-size: 22px; 
            font-weight: 700; 
            text-align: center; 
            margin-bottom: 40px; 
            color: #fff; 
            letter-spacing: 1.5px; 
            padding: 0 20px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }
        .sidebar-heading { 
            padding: 15px 25px; 
            font-size: 11px; 
            text-transform: uppercase; 
            color: #6c757d; 
            font-weight: 700; 
            letter-spacing: 1px;
            margin-top: 15px;
        }

        /* ANA ƒ∞√áERƒ∞K */
        .main-content { 
            margin-left: 260px; 
            padding: 30px; 
            animation: fadeIn 0.5s ease;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* FORM KARTLARI */
        .sim-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.08);
            background: white;
            margin-bottom: 25px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid rgba(0,0,0,0.05);
        }
        .sim-card:hover {
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
            transform: translateY(-3px);
        }
        .sim-card-header {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            padding: 18px 30px;
            border-bottom: 2px solid #eee;
            font-weight: 700;
            color: #495057;
            display: flex;
            align-items: center;
            font-size: 15px;
        }
        .sim-card-body { padding: 30px; }
        
        .form-label { 
            font-weight: 600; 
            font-size: 14px; 
            color: #495057; 
            margin-bottom: 10px;
        }
        .form-select, .form-control { 
            border-radius: 10px; 
            padding: 12px 15px; 
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }
        .form-select:focus, .form-control:focus { 
            border-color: #4e73df; 
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.15); 
            transform: translateY(-2px);
        }

        /* RANGE SLIDER */
        .range-wrap { position: relative; padding: 0 10px; }
        .range-val { 
            font-weight: 700; 
            font-size: 20px; 
            text-align: center; 
            margin-top: 10px; 
            padding: 10px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            border-radius: 10px;
        }
        .form-range {
            cursor: pointer;
        }
        .form-range::-webkit-slider-thumb {
            background: linear-gradient(135deg, #4e73df, #224abe);
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.4);
        }
        
        /* RADIO BUTONLARI */
        .btn-check:checked + .btn-outline-primary {
            background: linear-gradient(135deg, #4e73df, #224abe);
            color: #fff; 
            border-color: #4e73df;
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
            transform: scale(1.05);
        }
        .btn-outline-primary {
            transition: all 0.3s;
            border: 2px solid #4e73df;
        }
        .btn-outline-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.2);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #4e73df, #224abe);
            border: none;
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(78, 115, 223, 0.4);
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="brand"><i class="fa-solid fa-layer-group me-2"></i> TecnoStore <span style="color:#0d6efd">KDS</span></div>
        <div class="sidebar-heading">Analiz & Rapor</div>
        <a href="/"><i class="fa-solid fa-chart-pie me-2"></i> Kokpit (Dashboard)</a>
        <a href="#"><i class="fa-solid fa-map-location-dot me-2"></i> Coƒürafi Analiz</a>
        <div class="sidebar-heading mt-3">Gelecek Planlama</div>
        <a href="/simulasyon/yeni" class="active"><i class="fa-solid fa-wand-magic-sparkles me-2"></i> Yeni Sim√ºlasyon</a>
        <a href="/simulasyon/gecmis"><i class="fa-solid fa-clock-rotate-left me-2"></i> Ge√ßmi≈ü Sim√ºlasyonlar</a>
    </div>

    <div class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-secondary mb-0">üß™ Yeni Senaryo Olu≈ütur</h4>
                <small class="text-muted">Geleceƒüi tahmin etmek i√ßin parametreleri giriniz.</small>
            </div>
        </div>

        <form action="/simulasyon/hesapla" method="POST">
            <div class="row">
                
                <div class="col-lg-4">
                    <div class="sim-card">
                        <div class="sim-card-header"><i class="fa-regular fa-calendar me-2 text-primary"></i> Sim√ºlasyon S√ºresi</div>
                        <div class="sim-card-body">
                            <div class="d-grid gap-2 d-flex justify-content-center">
                                <input type="radio" class="btn-check" name="duration" id="opt6" value="6" checked>
                                <label class="btn btn-outline-primary w-100 py-3" for="opt6">
                                    <i class="fa-solid fa-hourglass-start d-block mb-1 fs-4"></i> 6 Ay
                                </label>

                                <input type="radio" class="btn-check" name="duration" id="opt12" value="12">
                                <label class="btn btn-outline-primary w-100 py-3" for="opt12">
                                    <i class="fa-solid fa-hourglass-end d-block mb-1 fs-4"></i> 12 Ay
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="sim-card">
                        <div class="sim-card-header"><i class="fa-solid fa-money-bill-trend-up me-2 text-success"></i> Ekonomik Beklentiler</div>
                        <div class="sim-card-body">
                            <div class="mb-3">
                                <label class="form-label">Dolar Kuru Beklentisi (‚Ç∫)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" step="0.1" class="form-control" name="usd" placeholder="√ñrn: 45.50" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Yƒ±llƒ±k Enflasyon (%)</label>
                                <div class="input-group">
                                    <span class="input-group-text">%</span>
                                    <input type="number" step="0.1" class="form-control" name="inflation" placeholder="√ñrn: 40" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="sim-card">
                        <div class="sim-card-header"><i class="fa-solid fa-crosshairs me-2 text-danger"></i> Stratejik Hedefleme (Filtreler)</div>
                        <div class="sim-card-body">
                            <div class="row g-3">
                                
                                <div class="col-md-4">
                                    <label class="form-label">Hedef Lokasyon (≈ûehir)</label>
                                    <select class="form-select" name="target_city">
                                        <option value="all" selected>üìç T√ºm T√ºrkiye (Genel)</option>
                                        <hr>
                                        <% sehirler.forEach(city => { %>
                                            <option value="<%= city.id %>"><%= city.sehir_adi %></option>
                                        <% }) %>
                                    </select>
                                    <div class="form-text text-muted small">√ñrn: Sadece ƒ∞stanbul'a √∂zel fiyat.</div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Hedef Marka</label>
                                    <select class="form-select" name="target_brand">
                                        <option value="all" selected>üè∑Ô∏è T√ºm Markalar</option>
                                        <hr>
                                        <% markalar.forEach(brand => { %>
                                            <option value="<%= brand.id %>"><%= brand.marka_adi %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Hedef Kategori</label>
                                    <select class="form-select" name="target_category">
                                        <option value="all" selected>üì¶ T√ºm Kategoriler</option>
                                        <hr>
                                        <% kategoriler.forEach(cat => { %>
                                            <option value="<%= cat.id %>"><%= cat.kategori_adi %></option>
                                        <% }) %>
                                    </select>
                                </div>

                            </div>
                            
                            <hr class="my-4 text-muted">

                            <div class="mb-2">
                                <label class="form-label d-flex justify-content-between">
                                    <span>Fiyat Deƒüi≈üikliƒüi Politikasƒ±</span>
                                    <span id="priceLabel" class="text-primary fw-bold">0% (Sabit)</span>
                                </label>
                                <input type="range" class="form-range" min="-30" max="100" step="5" value="0" id="priceRange" name="price_change">
                                <div class="d-flex justify-content-between text-muted small">
                                    <span>%30 ƒ∞ndirim</span>
                                    <span>%100 Zam</span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="sim-card bg-light border">
                        <div class="sim-card-body d-flex align-items-end gap-3">
                            <div class="flex-grow-1">
                                <label class="form-label">Senaryo Ba≈ülƒ±ƒüƒ±</label>
                                <input type="text" class="form-control" name="sim_name" placeholder="√ñrn: 2026 ƒ∞stanbul Apple Zammƒ±" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fa-solid fa-play me-2"></i> Sƒ∞M√úLE ET
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>

    <script>
        // Slider deƒüi≈üince yazƒ±yƒ± g√ºncelle
        const range = document.getElementById('priceRange');
        const label = document.getElementById('priceLabel');

        range.addEventListener('input', (e) => {
            const val = e.target.value;
            if (val > 0) {
                label.textContent = `+${val}% (ZAM)`;
                label.className = "text-success fw-bold";
            } else if (val < 0) {
                label.textContent = `${val}% (ƒ∞NDƒ∞Rƒ∞M)`;
                label.className = "text-danger fw-bold";
            } else {
                label.textContent = "0% (Sabit Fiyat)";
                label.className = "text-primary fw-bold";
            }
        });
    </script>
</body>
</html>